---
interface Props {
  link?: string;
  increaseStyle?: string;
}

const { link, increaseStyle } = Astro.props;
---

<a
  href={link}
  type="button"
  class={`flex items-center w-max uppercase text-white bg-primary-color-400 hover:bg-primary-color-300 focus:ring-4 focus:bg-primary-color-500 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 focus:outline-none ${increaseStyle}`}
>
  <slot />
  <slot name="icon" />
</a>
