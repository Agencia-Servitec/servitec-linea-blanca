---
interface Props {
	title: string
}

const { title } = Astro.props;
---

<h2 class="text-gray-950">
	{title}
	<span>
		<slot />
	</span>
</h2>

<style lang="scss">
  h2 {
    color: #fff;
    font-size: 2rem;
    text-align: center;
	font-weight: 500;
    line-height: 0.85;
    margin-bottom: 3rem;
    text-transform: uppercase;

		@media (max-width: 576px) {
			font-size: 2em;
		}

		@media (max-width: 375px) {
			font-size: 1.5em;
		}

		span {
			font-size: 1.5em;
			display: block;
		}
	}
</style>
