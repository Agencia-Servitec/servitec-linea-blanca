---
import Button from "./Button.astro";

interface Props {
  image?: string;
  title?: string;
  description?: string;
  link?: string;
}

const { image, title, description, link } = Astro.props;
---

<article
  class="flex flex-col rounded-lg shadow-xl overflow-hidden bg-white"
>
  <a href={`/services${link}`} class="h-48">
    <img class="mx-auto h-full object-contain" src={image} alt="" />
  </a>
  <div class="flex flex-col p-4 flex-grow">
    <a href={`/services${link}`}>
      <h3
        class="mb-2 text-xl font-bold tracking-tight text-[#010002]"
      >
        {title}
      </h3>
    </a>
    <p class="mb-3 font-normal text-gray-500 text-pretty">
      {description}
    </p>
    <Button link={`/services${link}`} increaseStyle="mt-auto" >
      Leer m√°s
      <Fragment slot="icon">
        <svg
          class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 14 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 5h12m0 0L9 1m4 4L9 9"></path>
        </svg>
      </Fragment>
    </Button>
  </div>
</article>

<style lang="scss">
  .product {
    width: auto;
    overflow: hidden;

    &__img {
      width: 100%;
      height: 225px;

      img {
        width: 100%;
        height: 100%;
      }
    }
  }
</style>