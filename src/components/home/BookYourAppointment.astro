---
import { Title } from "..";
---

<section class="flex flex-col gap-6 px-6 py-28 lg:py-40 lg:flex-row cita">
  <figure class="flex-1 flex justify-center">
    <img src="/images/tecnico.png" alt="Foto de un técnico" class="w-full md:w-96 object-contain" />
  </figure>
  <div class="flex-1">
    <Title>Reserva tu Cita</Title>
    <form class="">
      <div class="mb-5">
        <label for="name" class="block mb-2 font-medium text-[#010002]"
          >Nombres</label
        >
        <input
          type="text"
          id="name"
          class="text-[#010002] rounded-lg focus:border-[#0aabd7] block w-full p-2.5"
          required
        />
      </div>
      <div class="mb-5">
        <label for="email" class="block mb-2 font-medium text-[#010002]"
          >Correo</label
        >
        <input
          type="email"
          id="email"
          class="text-[#010002] rounded-lg focus:border-[#0aabd7] block w-full p-2.5"
          required
        />
      </div>
      <div class="mb-5">
        <label for="cellphone" class="block mb-2 font-medium text-[#010002]"
          >Número De Teléfono</label
        >
        <input
          type="text"
          id="cellphone"
          class="text-[#010002] rounded-lg focus:border-[#0aabd7] block w-full p-2.5"
          required
        />
      </div>
      <div class="mb-5">
        <label for="service" class="block mb-2 font-medium text-[#010002]"
          >Tipo de Servicio</label
        >
        <select
          id="service"
          class="text-[#010002] rounded-lg focus:border-[#0aabd7] block w-full p-2.5"
        >
          <option value="">Reparación de Licuadoras</option>
          <option value="">Reparación de Refrigeradores</option>
          <option value="">Reparación de Lavadoras</option>
          <option value="">Reparación de Visicooler</option>
          <option value="">Reparación de Televisores</option>
          <option value="">Reparación de Cocinas</option>
          <option value="">Reparación de Aire Acondicionado</option>
          <option value="">Reparación de Secadoras</option>
          <option value="">Reparación de Termas Eléctricas</option>
          <option value="">Reparación de Campana Extractora</option>
          <option value="">Reparación de Cámaras de Seguridad</option>
        </select>
      </div>
      <div class="sm:col-span-2 mb-5">
        <label for="message" class="block mb-2 font-medium text-[#010002]"
          >Consulta</label
        >
        <textarea
          id="message"
          rows="6"
          class="block p-2.5 w-full text-[#010002] rounded-lg shadow-sm border focus:border-[#0aabd7]"></textarea>
      </div>
      <button
        type="submit"
        class="text-white bg-[#0aabd7] hover:bg-[#6adcf6] focus:ring-4 focus-none focus:ring-blue-300 font-medium rounded-lg w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
        >Solicite ahora</button
      >
    </form>
  </div>
  <img
    src="/images/waves-bottom.svg"
    alt=""
    class="image-cita"
  />
  <img
    src="/images/waves-top.svg"
    alt=""
    class="image-cita-top"
  />
</section>

<style>
  .cita {
    position: relative;
  }

  .image-cita {
    position: absolute;
    top: 0;
    left: 0;
  }

  .image-cita-top {
    position: absolute;
    bottom: 0;
    left: 0;
  }
</style>

<script>
  const input = document.getElementById("cellphone");

  input.addEventListener("input", function () {
    let valorInput = input.value;

    valorInput = valorInput.replace(/\D/g, "");

    valorInput = valorInput.slice(0, 9);

    input.value = valorInput;
  });
</script>
