---
import { About, Banner, BannerBrands, CardService, Title } from "../components";
import { BaseLayout } from "../layouts";
import { services } from "../data-list/services.js";
import Testimonials from "../components/home/Testimonials.astro";
---

<BaseLayout title="Servitec linea blanca">
  <main class="">
    <Banner />
    <BannerBrands />
    <section class="px-6 py-20">
      <Title title="Nuestros Servicios" marginBottom="mb-10" />
      <section class="grid
      grid-cols-1
      md:grid-cols-3
      gap-6">
        {
          services.map((service) => {
            return (
              <CardService
                image={service.props.image}
                title={service.props.title}
                description={service.props.description}
                link={service.params.service}
              />
            );
          })
        }
      </section>
    </section>
    <About />
    <Testimonials/>
  </main>
</BaseLayout>
